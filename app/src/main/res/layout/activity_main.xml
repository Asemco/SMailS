<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sheridan.bestteam.newandroidassignment.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/eTxtEmail"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/txtEmail"
        android:singleLine="true"
        android:hint="example@example.com"
        android:textSize="16sp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eTxtEmail"
        android:layout_toEndOf="@+id/txtReply"
        android:id="@+id/togBtnReply" />

    <TextView
        android:text="Allow replies through E-Mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtReply"
        android:layout_alignBaseline="@+id/togBtnReply"
        android:layout_alignBottom="@+id/togBtnReply"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your E-Mail:"
        android:id="@+id/txtEmail"
        android:layout_alignBaseline="@+id/eTxtEmail"
        android:layout_alignBottom="@+id/eTxtEmail"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Enable Text to E-mail:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/togBtnReply"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp" />

    <ToggleButton
        android:text="ToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/togBtnEnable"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
